<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.hotelreservation.controller.AdminFeedbackController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f4faff;">

    <!-- Header Title -->
    <top>
        <Label text="All Guest Feedback"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 20 0 10 0;" />
    </top>

    <!-- Scrollable TableView -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" vbarPolicy="ALWAYS" style="-fx-padding: 10;">
            <VBox>
                <TableView fx:id="feedbackTable" prefWidth="860" style="-fx-font-size: 14px;">
                    <columns>
                        <TableColumn fx:id="colFeedbackID" text="Feedback ID" prefWidth="160"/>
                        <TableColumn fx:id="colBillID" text="Bill ID" prefWidth="100"/>
                        <TableColumn fx:id="colGuestID" text="Guest Name" prefWidth="160"/>
                        <TableColumn fx:id="colRating" text="Rating" prefWidth="80"/>
                        <TableColumn fx:id="colComment" text="Comments" prefWidth="340"/>
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Button -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER"
              style="-fx-padding: 15 20;">
            <Button text="Back to Dashboard" onAction="#goBackToDashboard"
                    style="-fx-font-size: 14px; -fx-padding: 6px 16px; -fx-background-color: #e0f0ff;" />
        </HBox>
    </bottom>

</BorderPane>
