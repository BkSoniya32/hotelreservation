<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.hotelreservation.controller.AdminController"
            style="-fx-background-color: #f4faff; -fx-padding: 40;">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Admin Login"
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;" />

            <Label fx:id="loginMessage"
                   text=""
                   style="-fx-text-fill: red; -fx-font-size: 14px;" />

            <TextField fx:id="usernameField"
                       promptText="Username"
                       style="-fx-font-size: 14px; -fx-pref-width: 250px;" />

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           style="-fx-font-size: 14px; -fx-pref-width: 250px;" />

            <HBox spacing="15" alignment="CENTER">
                <Button text="Login"
                        onAction="#handleLogin"
                        style="-fx-font-size: 14px; -fx-background-color: #b3e5fc;" />

                <Button text="Back"
                        onAction="#goBack"
                        style="-fx-font-size: 14px;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
