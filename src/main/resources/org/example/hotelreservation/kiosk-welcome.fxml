<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hotelreservation.controller.KioskWelcomeController"
      alignment="CENTER" spacing="25" prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f0f8ff; -fx-padding: 60;">

    <Label text="Welcome to Hotel ABC Kiosk!"
           style="-fx-font-size: 28px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

    <Label text="Use this touch screen to book your room step-by-step."
           style="-fx-font-size: 16px; -fx-text-fill: #555;" />

    <HBox alignment="CENTER" spacing="20">
        <Button text="Back"
                onAction="#goBack"
                style="-fx-font-size: 14px; -fx-background-color: #dddddd; -fx-text-fill: #333; -fx-padding: 8 20;" />

        <Button text="Start Booking"
                onAction="#startBooking"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 24;" />
    </HBox>

</VBox>
