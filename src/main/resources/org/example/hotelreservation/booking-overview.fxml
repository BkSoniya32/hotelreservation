<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.hotelreservation.controller.BookingOverviewController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0fff5;">

    <!-- Top Title -->
    <top>
        <Label text="Review Your Booking"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20 0 10 0; -fx-text-fill: #1e3a5f;" />
    </top>

    <!-- Scrollable Booking Summary -->
    <center>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    style="-fx-padding: 20;">
            <VBox fx:id="summaryBox" spacing="10"
                  style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;"/>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="25" BorderPane.alignment="CENTER"
              style="-fx-padding: 15;">
            <Button text="Back" onAction="#goBack"
                    style="-fx-font-size: 14px; -fx-pref-width: 100px;" />
            <Button text="Cancel" onAction="#cancelBooking"
                    style="-fx-font-size: 14px; -fx-pref-width: 100px; -fx-background-color: #ffdddd; -fx-text-fill: #a00;" />
            <Button text="Confirm" onAction="#confirmBooking"
                    style="-fx-font-size: 14px; -fx-pref-width: 100px; -fx-background-color: #ddffdd; -fx-text-fill: #060;" />
        </HBox>
    </bottom>

</BorderPane>
