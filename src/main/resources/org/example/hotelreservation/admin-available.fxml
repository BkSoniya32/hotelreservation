<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.hotelreservation.controller.AdminAvailableController"
            prefWidth="1000" prefHeight="800"
            style="-fx-background-color: #f4f9ff; -fx-padding: 20px;">

    <!-- Top Bar with Back Button and Title -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" BorderPane.alignment="TOP_CENTER"
              style="-fx-padding: 0 0 10 0;" prefHeight="60">
            <Button text="Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-font-size: 14px; -fx-padding: 8px 20px; -fx-background-color: #cccccc;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="ðŸ“‹ Available Rooms"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2a4d69;" />

            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Room Tables Scroll Section -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 10px;">
            <VBox spacing="25" alignment="CENTER">

                <VBox spacing="10">
                    <Label text="Single Rooms" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="singleTable" prefWidth="900" style="-fx-font-size: 14px;">
                        <columns/>
                    </TableView>
                </VBox>

                <VBox spacing="10">
                    <Label text="Double Rooms" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="doubleTable" prefWidth="900" style="-fx-font-size: 14px;">
                        <columns/>
                    </TableView>
                </VBox>

                <VBox spacing="10">
                    <Label text="Deluxe Rooms" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="deluxeTable" prefWidth="900" style="-fx-font-size: 14px;">
                        <columns/>
                    </TableView>
                </VBox>
                <VBox spacing="10">
                    <Label text="Penthouse Rooms" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="penthouseTable" prefWidth="900" style="-fx-font-size: 14px;">
                        <columns/>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
