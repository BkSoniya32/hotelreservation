<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hotelreservation.controller.AdminController"
      alignment="TOP_CENTER" spacing="20" prefWidth="800" prefHeight="600"
      style="-fx-padding: 50 40 40 40; -fx-background-color: #f4faff;">

    <Label text="Cancel Reservation"
           style="-fx-font-family: 'Georgia', 'Serif'; -fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f; -fx-padding: 0 0 20 0;" />

    <Label text="Please enter the Bill ID to cancel a reservation."
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;" />

    <Label text="(Bill ID e.g. 557865)"
           style="-fx-font-size: 14px; -fx-text-fill: #888888;" />

    <TextField fx:id="cancelBillIdField"
               promptText="Enter Bill ID"
               style="-fx-font-size: 15px; -fx-pref-width: 300px;" />

    <Label fx:id="cancelInfoLabel"
           text=""
           wrapText="true"
           maxWidth="400"
           style="-fx-text-fill: #d33; -fx-font-size: 14px;" />

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancel Reservation"
                onAction="#cancelReservation"
                style="-fx-font-size: 14px; -fx-background-color: #ffdddd; -fx-text-fill: #a00;" />

        <Button text="Back to Dashboard"
                onAction="#goBackToDashboard"
                style="-fx-font-size: 14px;" />
    </HBox>
</VBox>
