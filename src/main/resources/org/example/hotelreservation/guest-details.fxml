<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hotelreservation.controller.GuestDetailsController"
      alignment="CENTER" spacing="25" prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f5faff; -fx-padding: 40px;">

    <Label text="Guest Information"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f; -fx-padding: 0 0 10 0;"/>

    <VBox spacing="15" style="-fx-font-size: 16px; -fx-text-fill: #333;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Full Name:" style="-fx-pref-width: 120px; -fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="Enter your full name" prefWidth="250"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Email Address:" style="-fx-pref-width: 120px; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Enter a valid email" prefWidth="250"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Phone Number:" style="-fx-pref-width: 120px; -fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" promptText="Enter digits only" prefWidth="250"/>
        </HBox>
    </VBox>

    <Label fx:id="errorLabel" textFill="red" wrapText="true"
           style="-fx-font-size: 14px; -fx-padding: 5px;"/>

    <HBox spacing="30" alignment="CENTER">
        <Button text="Back" onAction="#goBack"
                style="-fx-padding: 8 20; -fx-font-size: 14px; -fx-background-color: #d0eaff;"/>
        <Button text="Next" onAction="#submitDetails"
                style="-fx-padding: 8 20; -fx-font-size: 14px; -fx-background-color: #b2fab4;"/>
    </HBox>

</VBox>
